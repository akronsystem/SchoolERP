                                                <i class="fa fa-save"> </i>   Save
                                            </button>

                                            <button class="btn btn-primary" ng-show="btnUpdate" ng-model="Update" ng-click="AddUpdate(TemplateId,TemplateTypeId,Name,Update='Update')">
                                                <i class="fa fa-save"> </i>   Update
                                            </button>
                                            <button class="btn btn-secondary" ng-click="Clear()">
                                                <i class="fa fa-times"> </i>  Cancel
                                            </button>
                                        </div>
                                    </div>
