                                    <div class="m-portlet__body">

                                        <div class="form-group m-form__group mb-3 row" ng-init="GetInfo()">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">
                                                Template Type<span class="required-star"
                                                                   style="color:red">*</span>
                                            </label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <select class="form-control m-input"  id="exampleGrievance"   ng-model="TemplateTypeId" >
                                                 
