                                <h3 class="m-portlet__head-text">
                                    Template Master
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    <select class="form-control" style="float: right;" ng-model="btnactive" ng-change="Initialize()">
                                        <option ng-selected="true" value="1">Active</option>
                                        <option value="0">Deactive</option>
                                    </select>
                                    </li>
<li class="m-portlet__nav-item">
                                    <a href="javascript:void(0);" ng-click="ShowHideSave()" class="btn btn-outline-info m-btn m-btn--icon">
                                        <span>
                                            <i class="la la-plus"></i>
                                            <span>Add Template</span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="row d-block m-0 mt-1">
                          
                            <p style="color:red">{{msg}}</p>
                            <!--begin: Datatable -->
                            <table class="table table-striped table-bordered table-hover" id="tblModule_master">
                                <thead>
                                    <tr>
                                        <th>Template Id</th>
                                        <th>Template Type</th>
                                        <th>Template Name</th>
                                        <th>Created Date</th>
                                        <th colspan="2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr ng-repeat="data in Modules">
                                        <td>
                                            {{data.TemplateId}}
                                        </td>
                                        <td>
                                            {{data.TemplateType}}
                                        </td>
                                        <td>
                                            {{data.Name}}
                                        </td>
                                        <td>
                                            {{data.CreatedDate}}
                                        </td>

                                        <td>

                                            <a class="edit-icon" href="javascript:void(0);" ng-click="ShowHide(data.TemplateId)" data-toggle="m-tooltip" title="Edit"><i class="la la-edit"></i></a>
