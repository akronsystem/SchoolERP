                                                                    <div class="m-list-badge m-list-badge--light-bg">
                                                                        <div class="m-list-badge__items">

                                                                            <div style="font-size:16px" ng-bind="str" class="m-list-badge__item m-list-badge__item--success"></div>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                        </div>
                                                </div>
                                                </div>




                                        </div>

