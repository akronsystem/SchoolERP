            <!-- END: Subheader -->
            <div class="m-content">
                <div ng-show="IsVisible">
                    <div class="row">
                        <div class="col-lg-12">
                            <!--begin::Portlet-->
                            <div class="m-portlet m-portlet--accent m-portlet--head-solid-bg m-portlet--head-sm" m-portlet="true" id="m_portlet_tools_1">
                                <div class="m-portlet__head">
                                    <div class="m-portlet__head-caption">
                                        <div class="m-portlet__head-title">
                                            <h3 class="m-portlet__head-text">
                                               Email Setting
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="m-portlet__head-tools">
                                        <ul class="m-portlet__nav">
                                            <li class="m-portlet__nav-item">
                                                <a href="#" m-portlet-tool="toggle" class="m-portlet__nav-link m-portlet__nav-link--icon"><i class="la la-angle-down"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row d-block m-0 mt-1 form-block-wrapper">

                                    @*<form class="m-form m-form--fit m-form--label-align-right">*@
                                    <div class="form-body m-portlet__body">

                                        <div class="form-group m-form__group mb-3 row">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">Port<span class="required-star" style="color:red">*</span></label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <input type="text" value={{Port}} ng-model="Port" id="Port" name="Port" class="form-control m-input" autocomplete="off" pattern="[0-9]+"  required />
                                                <input type="hidden" value="{{ConfigurationID}}" />
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group mb-3 row">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">Secure<span class="required-star" style="color:red">*</span></label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <input type="text" value={{Secure}} ng-model="Secure" id="Secure" name="Secure" class="form-control m-input" autocomplete="off" pattern="[a-zA-Z\s]+" required />
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group mb-3 row">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">Host<span class="required-star" style="color:red">*</span></label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <input type="text" value={{Host}} ng-model="Host" id="host" name="host" class="form-control m-input" autocomplete="off" required />
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group mb-3 row">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">UserName<span class="required-star" style="color:red">*</span></label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <input type="text" value={{UserName}} ng-model="UserName" id="username" name="username" class="form-control m-input" autocomplete="off" required />
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group mb-3 row" ng-show="password">
                                            <label for="example-text-input" class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-form-label">Password<span class="required-star" style="color:red">*</span></label>
                                            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                                                <input type="password" value={{Password}} ng-model="Password" id="password" name="password"  class="form-control m-input" autocomplete="off" required />
                                            </div>
                                        </div>

                                    </div>

                                    <div class="m-portlet__foot">
                                        <div class="row m-0 justify-content-end">
                                            <button class="btn btn-primary" ng-show="btnSave" ng-model="Save" ng-click="Add(ConfigurationID,Port,Secure,Host,UserName,Password)">
                                                <i class="fa fa-save"> </i>   Save
                                            </button>

                                            <button class="btn btn-primary" ng-show="btnUpdate" ng-model="Update" ng-click="AddUpdate(ConfigurationID,Port,Secure,Host,UserName,Password)">
                                                <i class="fa fa-save"> </i>   Update
                                            </button>
                                            <button class="btn btn-secondary" ng-click="Clear()">
                                                <i class="fa fa-times"> </i>  Cancel
                                            </button>
                                        </div>
                                    </div>
                                    @*</form>*@

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Portlet-->

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Email Setting
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item">
                                    <select class="form-control" ng-model="btnactive" ng-change="Initialize()">
                                        <option ng-selected="true" value="1">Active</option>
                                        <option value="0">Deactive</option>
                                    </select>
                                </li>
                                <li class="m-portlet__nav-item">
                                    <a href="javascript:void(0);" ng-click="ShowHideSave()" class="btn btn-outline-info m-btn m-btn--icon">
                                        <span>
                                            <i class="la la-plus"></i>
                                            <span>Add Configuration</span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="row d-block m-0 mt-1">

                            <p style="color:red">{{msg}}</p>
                            <!--begin: Datatable -->
                            <table class="table table-striped- table-bordered table-hover table-checkable" id="section_table_view">
                                <thead>
                                    <tr>
                                        @*<th>Board Id</th>*@
                                        <th>UserName</th>
                                        <th>Host</th>
                                        <th>Port</th>
                                        <th colspan="2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr ng-repeat="data in SMTPData">

                                        <td>
                                            {{data.UserName}}
                                        </td>
                                        <td>
                                            {{data.Host}}
                                        </td>
                                        <td>
                                            {{data.Port}}
                                        </td>

                                        <td>

                                            <a class="edit-icon" ng-click="ShowHide(data.ConfigurationID)" data-toggle="m-tooltip" title="Edit"><i class="la la-edit"></i></a>
                                            @*<input type="button" class="btn btn-primary" value="Edit" ng-click="ShowHide(data.ModuleId)" />*@
                                        </td>
                                        <td>
                                            <span class="m-switch m-switch--icon m-switch--danger">
                                                <label>
                                                    <input type="checkbox" ng-show="chkStatus" ng-checked="{{data.Status}}" ng-click="Delete(data.ConfigurationID)">
                                                    <span></span>
                                                </label>
                                            </span>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
  
